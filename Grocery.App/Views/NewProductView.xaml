<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.NewProductView"
             x:DataType="vm:NewProductViewModel"
             Title="NewProductView">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Product toevoegen" FontSize="24" HorizontalOptions="Center" />

        <Label Text="Naam" FontSize="18" HorizontalOptions="Start" />
        <Entry Placeholder="Naam" Text="{Binding ProductName}" Keyboard="Text" />

        <Label Text="Voorraad" FontSize="18" HorizontalOptions="Start" />
        <Entry Placeholder="Voorraad" Text="{Binding ProductStock}" Keyboard="Numeric" />

        <Label Text="THT Datum" FontSize="18" HorizontalOptions="Start" />
        <DatePicker Date="{Binding ProductShelfLife}" />

        <Label Text="Prijs" FontSize="18" HorizontalOptions="Start" />
        <Entry Placeholder="Prijs" Text="{Binding ProductPrice}" Keyboard="Numeric" />
        
        <Button Text="Toevoegen" Command="{Binding AddProductCommand}" />
        <Label Text="{Binding ProductMessage}" TextColor="Red" />
    </StackLayout>
</ContentPage>